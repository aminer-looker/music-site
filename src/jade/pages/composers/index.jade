extends ../../layouts/basic

block content
    #composers-index(ng-controller='ComposerPageController as controller')
        h1 Pick a composer to explore.
        .composer-list
            ul(ng-show='composerPage')
                li(class='composer-list-item' ng-repeat='composer in composerPage.list')
                    a(href='{{composer.detail_url}}')
                        | <span class="first-name">{{composer.last_name}}</span><span class="last-name">,
                        | {{composer.first_name}}</span>
            .button-row
                input(
                    ng-class='composerPage.hasPrevPage() ? "" : "disabled"'
                    ng-click='prevPage()'
                    type='button'
                    value='prev'
                )
                input(
                    ng-class='composerPage.hasNextPage() ? "" : "disabled"'
                    ng-click='nextPage()'
                    type='button'
                    value='next'
                )
        .error(class='ng-cloak' ng-show='error')
            pre {{error}}
