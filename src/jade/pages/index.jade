doctype html
html(ng-app='app')
    head
        title Classical Music DB

    body(ng-controller='ComposerListController as controller')
        h1 Composers
        ul(ng-show='controller.composers')
            li(class='composerListItem' composer='composer' ng-repeat='composer in controller.composers')
        .error(ng-show='error')
            pre {{error}}

        script(src='client.js')
