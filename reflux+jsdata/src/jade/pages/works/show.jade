extends ../../layouts/basic

block content
    #work-show(ng-controller='WorkModelController as controller')
        .navigation(ng-show='work.composer.id')
            a(href='/composers/{{work.composer.id}}' target='_self') Â« back to composer page

        .header(class='ng-cloak' ng-show='work.title')
            h1 {{work.title}}
            a(href='http://classicalmusicdb.com{{work.url}}') see on ClassicalMusic DB

        .detail
            ul
                li
                    span.key instrumentation
                    span.value {{work.instrument.name}}
                    span.unknown(ng-hide='work.instrument.name')
                li
                    span.key type
                    span.value {{work.type.name}}
                    span.unknown(ng-hide='work.type.name')
                li
                    span.key composed
                    span.value {{work.composedYear}}
                    span.unknown(ng-hide='work.composedYear')
                li
                    span.key difficulty
                    span.value {{work.difficulty}}
                    span.unknown(ng-hide='work.difficulty')

        .controls
            input(type='button' ng-click='controller.beginEditing()' value='Edit')

        .error(class='ng-cloak' ng-show='error')
            pre {{controller.error}}

        dialog(owner='controller')
            editor(owner='controller')
                .row
                    label instrumentation
                    select(
                        ng-model='controller.editor.instrumentId'
                        ng-options='i.id as i.name for i in controller.editor.instruments'
                    )
                .row
                    label type
                    select(
                        ng-model='controller.editor.typeId'
                        ng-options='t.id as t.name for t in controller.editor.types'
                    )
                .row
                    label composed
                    input(ng-model='controller.editor.composedYear')
                .row
                    label difficulty
                    input(ng-model='controller.editor.difficulty')

            .button-bar
                input(ng-click='controller.save()' type='submit' value='Save')
                input(ng-click='controller.cancel()' type='button' value='Cancel')
